/* pages/shenghuo/miaosha/miaoshaCell/miaoshaCell.wxss */

.miaoshaCell-container {
  flex-direction: row;
  display: flex;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  width: 100%;
  height: 160rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
}

.miaoshaCell-topView-left-image {
  margin-top: 12rpx;
  margin-left: 8rpx;
  width: 220rpx;
  height: 132rpx;
  border-radius: 4px;
}

.miaoshaCell-topView-right-content {
  flex-direction: column;
  display: flex;
  margin-top: 8rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
  height: 140rpx;
}

.miaoshaCell-title {
  margin-top: 8rpx;
  margin-left: 8rpx;
  font-size: 16px;
  /*font-weight: bold;*/
  height: 84rpx;
  width: 506rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  color: #1d1d1d;
}

.miaoshaCell-bottomView {
  flex-direction: row;
  display: flex;
  width: 100%;
  height: 60rpx;
  margin-right: 0rpx;
  margin-bottom: 8rpx;
}

.miaoshaCell-dIPriceTitle {
  font-size: 18px;
  font-weight: bold;
  color: #0164a6;
  line-height: 60rpx;
  vertical-align: bottom;
  margin-left: 4rpx;
}

.miaoshaCell-costPriceTitle {
  font-size: 12px;
  margin-left: 4px;
  text-decoration: line-through;
  color: #aaa;
  line-height: 60rpx;
  vertical-align: bottom;
}

.miaoshaCell-rightBtn {
  margin-top: 12rpx;
  margin-right: 12rpx;
  height: 40rpx;
  line-height: 40rpx;
  width: 120rpx;
  font-size: 13px;
  color: white;
  background-color: #ff3c3c;
  border-radius: 5px;
  padding: 2rpx;
}
