@import "ValuePreferenceCell/ValuePreferenceCell.wxss";

.page-container {
  background: #fff;
  overflow: hidden;
}

.top-container {
  top: 0px;
  width: 100%;
  height: 40px;
  flex-direction: row;
  display: flex;
  background: #0164a6;
  position: fixed;
  z-index: 99;
}

.counpon-oparition-city {
  position: fixed;
  height: 40px;
  line-height: 40px;
  width: 160rpx;
  left: 0;
  background: #0164a6;
  color: #fff;
}

.city-location-tittle {
  width: 100%;
  height: 100%;
  flex-direction: row;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 13px;
}

.city-location-tittle:after {
  content: "|";
  color: #fff;
  padding-right: 2rpx;
}

.scroll-view_container {
  position: fixed;
  margin-left: 160rpx;
  margin-right: 0;
  margin-top: 0;
  white-space: nowrap;
  background-color: white;
  line-height: 40px;
  height: 40px;
  width: 590rpx;
  background: #0164a6;
  text-align: center;
  font-size: 30rpx;
}

.selected {
  color: #fff;
}

.selected view {
  color: #fff;
}

.selected view.active {
  color: #fff;
  border-bottom: 2px solid #fff;
}

.flex-sub-box-5 {
  display: inline-block;
  width: 25%;
  height: 36px;
  align-items: center;
}

/** 下拉菜单 */
.nav {
  position: fixed;
  margin-top: 40px;
  z-index: 99;
  display: flex;
  border-top: 1px solid #d1d3d4;
  border-bottom: 1px solid #d1d3d4;
  background: #fff;
  width: 100%;
}

.nav-son {
  display: flex;
  flex: 1;
  text-align: center;
  height: 40px;
  align-items: center;
  justify-content: center;
  font-size: 14px;
}

.borders {
  border-left: 1px solid #e6e6e6;
  border-right: 1px solid #e6e6e6;
}

.content {
  display: inline-block;
}

.icon {
  display: inline-block;
  border: 4px solid transparent;
  border-top: 4px solid #9b9b9b;
  margin-left: 5px;
}

.temp {
  position: relative;
  z-index: 4;
}

.temp1 {
  position: fixed;
  display: none;
  width: 100%;
  max-height: 550rpx;
  overflow-y: scroll;
  padding: 0 0 0 20rpx;
  line-height: 100rpx;
  background: #fff;
}

.temp2 {
  position: fixed;
  display: none;
  width: 100%;
  max-height: 750rpx;
  overflow-y: scroll;
  padding: 0 0 0 20rpx;
  line-height: 100rpx;
  background: #fff;
}

.temp view {
  border-bottom: 1px solid #d1d3d4;
  font-size: 14px;
  color: #666;
}

.fullbg {
  z-index: 1;
  width: 100%;
  top: 40px;
  position: fixed;
  height: 100%;
  background: rgb(1, 1, 1);
  transition: all 2s;
  opacity: 0;
}

.fullopacity {
  opacity: 0.5;
}

.nav-son.active .content {
  color: #61beff;
}

.nav-son.active .icon {
  border-bottom: 4px solid #61beff;
  border-top: 0;
}

@keyframes slidown {
  from {
    transform: translateY(-100%);
  }

  to {
    transform: translateY(80px);
  }
}

.slidown {
  display: block;
  animation: slidown 0.3s ease-in both;
}

@keyframes slidup {
  from {
    transform: translateY(0%);
  }

  to {
    transform: translateY(-100%);
  }
}

.slidup {
  display: block;
  animation: slidup 0.3s ease-in both;
}

.disappear {
  display: none;
}
/** 搜索列表 */

.couponSearchList-container {
  display: flex;
  flex-direction: column;
  top: 80px;
  width: 100%;
  height: 100% - 80px;
  position: absolute;
  z-index: 0;
  background-color: #efefef;
}
