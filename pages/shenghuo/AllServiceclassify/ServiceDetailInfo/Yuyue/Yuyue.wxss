.yuyue-container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.section-container {
  display: flex;
  flex-direction: row;
  color: red;
  width: 100%;
  height: 35px;
  background-color: #f5f5f5;
  align-items: center;
  padding: 0 12px;
}

.cell-title {
  font-size: 16px;
  font-weight: bold;
  color: #222;
}

.remark-title {
  width: 100%;
  height: 35px;
  background-color: #f5f5f5;
  align-items: center;
  padding: 0 12px;
}

.common-input {
  width: 100%;
  height: 40px;
  color: #222;
  font-size: 13px;
  padding: 0 12px;
}

