.hotNewsCell-container {
  flex-direction: column;
  display: flex;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
}

.hotNewsCell-topView {
  flex-direction: row;
  display: flex;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  width: 100%;
  height: 160rpx;
  background-color: #fff;
}

.hotNewsCell-topView-left-image {
  margin-top: 8rpx;
  margin-left: 8rpx;
  width: 220rpx;
  height: 132rpx;
  position: absolute;
}

.hotNewsCell-topView-right-content {
  flex-direction: column;
  display: flex;
  margin-top: 8rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
  height: 120rpx;
}

.hotNewsCell-title {
  margin-top: 8rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
  font-size: 17px;
  font-weight: bold;
  height: 44px;
}

.hotNewsCell-Subtitle {
  margin-top: 8rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
  font-size: 15px;
  height: 26px;
  
}

.hotNewsCell-bottomView {
  flex-direction: row;
  display: flex;
  width: 100%;
  height: 24rpx;
  margin-bottom: 8rpx;
}

.author {
  width: 200rpx;
  height: 26rpx;
  margin-top: 0px;
  margin-left: 8px;
  text-align: left;
}

.lastUpdateTime {
  width: 100rpx;
  height: 26rpx;
  margin-top: 0px;
  margin-bottom: 0rpx;
  margin-right: 8rpx;
  text-align: right;
}
